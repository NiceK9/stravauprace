extends ../node_modules/pug-bootstrap/_bootstrap
append styles
	+bootswatch("flatly")
	link(href='../css/theme.css', rel='stylesheet')
	link(href='../css/sticky-footer-simple.css', rel='stylesheet')
block body
	nav.navbar.navbar-default.navbar-fixed-top
		.container-fluid.theme-showcase
			.navbar-header
				button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
					span.sr-only Toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(href='/') VNG Uprace
			#navbar.navbar-collapse.collapse
				ul.nav.navbar-nav
					li
						a(href='/') Bảng xếp hạng
					li.active
						a(href='/authorize') Đăng ký
					li
						a(href='/about') Giới thiệu
					li
						a(href='/contact') Liên hệ
	.container.theme-showcase(role='main')
		.page-header
			h2 Đăng ký
			p
				if (error)
					+alert-x-danger(error.message)
				else if (result)
					+alert-x-success(result.message)

	footer.footer
			.container
				p.text-center.text-muted Copyright © 2017 by VNG GST Developers